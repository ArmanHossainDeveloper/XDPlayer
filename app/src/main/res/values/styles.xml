<resources>
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

    </style>


    <style name="btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="click_btn">
        <item name="android:onClick">onClick</item>
    </style>


    <style name="basic_btn_config" parent="click_btn">
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="text_btn" parent="basic_btn_config">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>

    </style>

    <style name="img_btn" parent="basic_btn_config">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="drawer_menu_txt_btn" parent="text_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f90</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="menuBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#eee</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="drawer_menu_img_btn" parent="img_btn">
        <item name="android:layout_marginTop">5dp</item>
    </style>
<style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Feature">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Feature.Button">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>
    <style name="Feature.Description">
    </style>


</resources>
